  <modelVersion>4.0.0</modelVersion>

  <groupId>io.github.samurainate</groupId>
  <artifactId>chestdrop</artifactId>
  <version>1.0-alpha-6</version>
  <packaging>jar</packaging>

  <name>chestdrop</name>
  <url>http://github.com/samurainate/chestdrop</url>

  <issueManagement>
    <system>GitHub</system>
    <url>http://github.com/samurainate/chestdrop/issues</url>
  </issueManagement>


  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  
	<repositories>
